---
import ExperienceCard from './ExperienceCard.astro';
import MobileExperienceCard from './MobileExperienceCard.astro';
import { experienceConfig } from '../../config/experience.config';
---

<section id="experiencia" class="py-20">
    <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-white">
            Experiencia
            <span class="block h-1 w-20 bg-[#2196F3] mx-auto mt-4"></span>
        </h2>
        
        <div class="hidden md:flex justify-center items-center gap-16 flex-wrap">
            {experienceConfig.map(exp => (
                <ExperienceCard experience={exp} />
            ))}
        </div>

        <div class="grid grid-cols-1 gap-6 md:hidden">
            {experienceConfig.map(exp => (
                <MobileExperienceCard experience={exp} />
            ))}
        </div>
    </div>
</section>
