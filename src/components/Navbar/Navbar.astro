---
import MobileMenu from './MobileMenu.jsx';
const currentPath = Astro.url.pathname;

const navItems = [
    { href: "/", label: "Inicio" },
    { href: "#proyectos", label: "Proyectos" },
    { href: "#experiencia", label: "Experiencia" },
    { href: "#habilidades", label: "Habilidades" },
    { href: "#contacto", label: "Contacto" },
];
---

<header class="w-full h-16 py-4 bg-[#1a1a1a]/90 text-white fixed top-0 left-0 right-0 backdrop-blur-sm z-50">
    <nav class="max-w-5xl mx-auto flex items-center justify-between px-6">
        <div class="text-xl font-bold">
            <a href="/" class="hover:text-[#2196F3] transition-colors">Miguel Dev</a>
        </div>
        <ul class="hidden md:flex gap-6">
            {
                navItems.map(({ href, label }) => (
                    <li>
                        <a 
                            href={href} 
                            class={`hover:text-[#2196F3] transition-colors relative ${
                                (href === "/" ? currentPath === "/" : currentPath.includes(href)) 
                                ? "active" 
                                : ""
                            }`}
                        >
                            {label}
                        </a>
                    </li>
                ))
            }
        </ul>
        <MobileMenu client:load items={navItems} />
    </nav>
</header>

<style>
    .active::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #2196F3;
        transform: scaleX(1);
    }

    a::after {
        content: '';
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: #2196F3;
        transform: scaleX(0);
        transition: transform 0.3s ease;
    }

    a:hover::after {
        transform: scaleX(1);
    }
</style>