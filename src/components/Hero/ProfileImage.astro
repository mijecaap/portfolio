---
import { Image } from 'astro:assets';
import profileImage from '../../assets/profile.png';
---

<div class="hidden md:flex md:absolute -bottom-20 right-0 w-full md:w-1/2 justify-center md:justify-end items-end z-[5] fade-in-delayed">
    <Image 
        src={profileImage} 
        alt="Miguel profile" 
        class="w-[350px] md:w-[500px] h-auto object-contain hover:scale-105 transition-all duration-300 profile-animation relative hover:shadow-glow"
    />
</div>

<style>
    .profile-animation {
        animation: pulse 3s ease-in-out infinite;
    }

    .hover\:shadow-glow:hover {
        filter: drop-shadow(0 0 10px rgba(33, 150, 243, 0.3));
    }
</style>
