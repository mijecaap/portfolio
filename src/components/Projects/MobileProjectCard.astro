---
import { Image } from "astro:assets";

interface Props {
  project: {
    title: string;
    imageUrl: ImageMetadata;
    technologies: string[];
    demoUrl: string;
    githubUrl?: string;
    role: string;
    challenge: string;
    highlights: string[];
  };
}

const { project } = Astro.props;
---

<div class="bg-[#1a1a1a] rounded-xl shadow-lg overflow-hidden">
    <div class="relative">
        <Image
            src={project.imageUrl}
            alt={project.title}
            width={600}
            height={300}
            class="w-full h-48 object-cover"
        />
        <div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-[#1a1a1a] to-transparent h-20"></div>
    </div>

    <div class="p-6 space-y-4">
        <h3 class="text-xl font-bold text-white">{project.title}</h3>
        
        <div class="flex flex-wrap gap-2">
            {project.technologies.map((tech) => (
                <span class="px-3 py-1 bg-[#2196F3]/20 text-[#64B5F6] rounded-full text-sm">
                    {tech}
                </span>
            ))}
        </div>

        <div class="pt-2">
            <h4 class="text-lg font-semibold text-[#2196F3] mb-2">
                Rol: {project.role}
            </h4>
            <p class="text-gray-300 text-sm mb-3">{project.challenge}</p>
            
            <div class="space-y-1.5">
                {project.highlights.map((highlight) => (
                    <p class="text-gray-400 flex items-center gap-2 text-sm">
                        <span class="text-[#64B5F6]">â€¢</span> {highlight}
                    </p>
                ))}
            </div>
        </div>

        <div class="flex gap-3 pt-4">
            {project.githubUrl && (
                <a
                    href={project.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="flex-1 py-2 border border-[#2196F3] text-white rounded-lg 
                           hover:bg-[#2196F3]/10 transition-colors text-center
                           flex items-center justify-center gap-2"
                >
                    <svg height="20" width="20" viewBox="0 0 16 16" class="fill-current">
                        <path d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.013 8.013 0 0016 8c0-4.42-3.58-8-8-8z" />
                    </svg>
                    GitHub
                </a>
            )}
            <a
                href={project.demoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 py-2 bg-[#2196F3] text-white rounded-lg 
                       hover:bg-[#1976D2] transition-colors text-center"
            >
                Ver Demo ðŸ”—
            </a>
        </div>
    </div>
</div>

<style>
    .bg-gradient-to-t {
        background: linear-gradient(to top, rgba(26, 26, 26, 1) 0%, rgba(26, 26, 26, 0) 100%);
    }
</style>
