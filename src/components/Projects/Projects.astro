---
import ProjectCardReact from './ProjectCard.jsx';
import MobileProjectCard from './MobileProjectCard.astro';
import { projectsConfig } from '../../config/projects.config';
---

<section id="proyectos" class="py-20">
    <div class="max-w-7xl mx-auto px-6">
        <h2 class="text-4xl md:text-5xl font-bold text-center mb-16 text-white">
            Proyectos
            <span class="block h-1 w-20 bg-[#2196F3] mx-auto mt-4"></span>
        </h2>
        {/* Versión Desktop */}
        <div class="hidden lg:grid lg:grid-cols-2 gap-16">
            {projectsConfig.map((project) => (
                <ProjectCardReact client:visible project={project} />
            ))}
        </div>
        {/* Versión Mobile */}
        <div class="grid grid-cols-1 gap-8 lg:hidden">
            {projectsConfig.map((project) => (
                <MobileProjectCard project={project} />
            ))}
        </div>
    </div>
</section>
